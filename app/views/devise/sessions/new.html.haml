.user
  .user__info
    %h1 ⭐️TECH::CAMP生の為のSNS⭐️ログイン画面
  .user__form
    .user__input__center
      = form_for(resource, as: resource_name, url: new_user_session_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .user__new
          新規会員登録の方はこちら
          = link_to "新規会員登録", new_user_registration_path
        .user__input__top
          本名(他の人には表示されません)
          %span.red
            必須
          = f.text_field :name, autofocus: true, autocomplete: "nickname", class: "text-field", placeholder: "例) 岡本琉雅"
        .user__input
          メールアドレス(他の人には表示されません)
          %span.red
            必須
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field", placeholder: "例) "
        .user__input
          = f.label :password, "パスワード"
          %em
            7文字以上
          %span.red
            必須
          = f.password_field :password, autocomplete: "new-password",  class: "text-field", placeholder: "例) 半角英数字でお願いします"
        %label
          %input.user__input__password{:type => "checkbox"}>
            パスワードを表示する
          .user__input__actions
            = f.submit "ログイン", class: 'red-btn'